# Genymotion Cloud API Configuration
# Copy this file to .env and fill in your actual values

# Your Genymotion Cloud API key
# Get this from: https://cloud.geny.io/account/api-keys
# Example: GENYMOTION_API_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...
GENYMOTION_API_KEY=your-api-key-here

# Optional: Genymotion Cloud region
# Available regions: us-east-1, us-west-1, eu-west-1, ap-southeast-1
# Default: us-east-1
GENYMOTION_REGION=us-east-1

# Optional: Device template to use
# Default: Google Pixel 2 - 8.0 - API 26 - 1080x1920
# Other options: Google Pixel 3 - 9.0 - API 28, Samsung Galaxy S10 - 9.0 - API 28
DEVICE_TEMPLATE="Google Pixel 2 - 8.0 - API 26 - 1080x1920"

# Optional: AndroidWorld configuration
# Timeout for task execution in seconds
ANDROIDWORLD_TIMEOUT=300
# Maximum retry attempts for failed tasks
ANDROIDWORLD_MAX_RETRIES=3

# Optional: ADB configuration
# ADB connection timeout in seconds
ADB_TIMEOUT=30
# ADB server port (usually 5037)
ADB_SERVER_PORT=5037

# Optional: Logging configuration
# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO
# Enable structured logging (true/false)
STRUCTURED_LOGGING=true

# Optional: Performance configuration
# Number of concurrent episodes for evaluation
MAX_CONCURRENT_EPISODES=5
# Episode timeout in seconds
EPISODE_TIMEOUT=60

# Optional: Observability configuration
# Enable tracing (true/false)
ENABLE_TRACING=true
# Enable metrics collection (true/false)
ENABLE_METRICS=true
# Save observability data to files (true/false)
SAVE_OBSERVABILITY_DATA=true

# Optional: Load testing configuration
# Base URL for load testing (replace with your service URL)
LOAD_TEST_BASE_URL=http://your-service-url
# Number of requests for stress testing
STRESS_TEST_REQUESTS=100
# Concurrent users for load testing
LOAD_TEST_CONCURRENT_USERS=10

# Optional: CI/CD configuration
# Enable CI mode (true/false) - affects logging and error handling
CI_MODE=false
# Test environment flag (true/false)
TEST_ENVIRONMENT=true

# =============================================================================
# QUICK SETUP FOR REVIEWERS:
# =============================================================================
# 1. Copy this file to .env:
#    cp env.example .env
#
# 2. Get your Genymotion API key from:
#    https://cloud.geny.io/account/api-keys
#
# 3. Update the .env file with your actual API key:
#    GENYMOTION_API_KEY=your-actual-api-key-here
#
# 4. For local testing without Genymotion, you can use:
#    GENYMOTION_API_KEY=mock-key-for-local-testing
#    TEST_ENVIRONMENT=true
#
# 5. For production deployment, ensure:
#    CI_MODE=false
#    TEST_ENVIRONMENT=false
#    ENABLE_TRACING=true
#    ENABLE_METRICS=true
# =============================================================================
